<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal">


    <!--TicketView-->
        <com.vipulasri.ticketview.TicketView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ticketView"
            app:ticketOrientation="horizontal"
            app:ticketScallopRadius="10dp"
            app:ticketScallopPositionPercent="50"
            app:ticketShowBorder="false"
            app:ticketBorderWidth="1dp"
            app:ticketBorderColor="@color/colorAccent"
            app:ticketShowDivider="true"
            app:ticketDividerPadding="0dp"
            app:ticketDividerType="dash"
            app:ticketCornerType="rounded"
            app:ticketElevation="8dp"
            android:visibility="visible"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                app:srcCompat="@drawable/ic_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/movie_ticket_number"
                android:textColor="@color/colorTextoTicket2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        </LinearLayout>

